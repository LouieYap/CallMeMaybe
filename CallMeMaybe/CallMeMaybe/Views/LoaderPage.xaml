<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.Views.LoaderPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#4949FB">
            
            <Image  Source="call_me_maybe.png" VerticalOptions="Start" HorizontalOptions="CenterAndExpand" WidthRequest="300" HeightRequest="300" />
            <Label x:Name="message"  HorizontalTextAlignment="Center" TextColor="White"></Label>
            <Button x:Name="proceed" Margin="0,20,0,0" HorizontalOptions="Center" HeightRequest="35" WidthRequest="180" Clicked="OnProceed" Text="PROCEED" TextColor="White" BackgroundColor="#FF0000" IsVisible="False"></Button>
            <Label Text="Developed by LOUIE" Margin="0,0,0,10" TextColor="White" HorizontalTextAlignment="Center" VerticalOptions="EndAndExpand"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>